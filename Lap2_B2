USE QuanLyNhanVien;
GO

CREATE TABLE NHANVIEN (
MANV char (5) PRIMARY KEY,
HOTEN nvarchar (50),
NGAYSINH date,
GIOITINH bit,
DIACHI nvarchar (100),
MAPB char (5),
MACV char (5),
LUONGCB decimal,
HESOLUONG decimal);
GO

CREATE TABLE PHONGBAN (
MAPB char (5) PRIMARY KEY,
TENPB nvarchar (50)
);
GO

CREATE TABLE CHUCVU (
MACV char (5),
TENCV nvarchar (50)
);
GO

CREATE TABLE LUONG (
MANV char (5) PRIMARY KEY,
NGAY date,
LUONGTHUONG decimal,
PHUCAP decimal);
GO

--PHONGBAN
